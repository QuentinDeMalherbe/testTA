<div class="container">
  <table>
        <tbody>
          <tr>
            <td> les lettres : </td>
            <% @party.random_array.each do |letter| %>
              <td><%= letter %></td>
            <% end %>
          </tr>
      </tbody>
  </table>
  <%= simple_form_for [ @game, @party ] do |f| %>
  <%= f.input :word %>
  <%= f.input :ten_letters_list %>
  <%= f.input :available %>
  <%= f.input :score %>
  <%= f.submit "Submit word", class: "btn btn-primary" %>
<% end %>
</div>
